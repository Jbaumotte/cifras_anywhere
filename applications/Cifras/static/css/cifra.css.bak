body{
    background:url(/Cifras/static/images/guitar3.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;    
}

#subtitles{
    color: white;
    font-family: 'Lily Script One';
    text-align: left;
    font-size: 24px;
    padding-left: 40px;
}

#evernote {
	background:url(/Cifras/static/images/evernoteicon.png) no-repeat;
    cursor:pointer;
    width: 55px;
    height: 50px;
    border: none;
    background-size: contain;

}

#pdf_button {
	background:url(/Cifras/static/images/pdf_icon.png) no-repeat;
    cursor:pointer;
    width: 55px;
    height: 50px;
    border: none;
    background-size: contain;     
}

pre{
	color: white;
	opacity:1;
	filter:alpha(opacity=100);
	background-color: black;
	width: 60%;
}

pre:select{
	color: black;
	background-color: white;
	border: double white 1px;
}


#save{
    display: none;
    margin: 5px 10px 10px;
}



#title_button{
	
	width: 42%;
	position: fixed;
	padding-left: 600px;
	
}


#left_sidebar{
    
    background:url(/Cifras/static/images/logo_minhascifras.png) no-repeat;
    width: 400px;
    height: 100px;
    background-size: contain;
    position: relative;
    padding-top: 250px;
    padding-left: -500px;

    transform:rotate(-90deg);
    -ms-transform:rotate(-90deg); /* IE 9 */
    -webkit-transform:rotate(-90deg); /* Safari and Chrome */

}
